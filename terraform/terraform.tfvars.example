# Example Terraform variables file
# Copy this file to terraform.tfvars and fill in your values
# terraform.tfvars is in .gitignore and will not be committed

# Required: Your S3 bucket name
bucket_name = "your-name-coldvault-backups"

# AWS region (default: us-east-1)
aws_region = "us-east-1"

# IAM user name (default: coldvault-backup-user)
iam_user_name = "coldvault-backup-user"

# Enable automatic storage class transitions for backup files (optional, default: false)
# If enabled, files will transition to Glacier after 90 days and Deep Archive after 180 days
# Note: Manifest files are always kept in STANDARD regardless of this setting
enable_lifecycle_transitions = false

# Budget configuration (optional)
enable_budget = true
budget_limit  = 5  # Monthly budget in USD
budget_email  = "your-email@example.com"  # Email for budget alerts (must be verified in AWS)
